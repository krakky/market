{
    "Name": "Cassandra | Cluster (v0.2)",
    "Version": "3.6",
    "Title": "Cassandra | Cluster (v0.2)",
    "Heading": "Cassandra | Cluster (v0.2)",
    "Description": "SUPPORTED: Ubuntu-14(container) & Centos-6(container) [TESTED] .Cassandra NoSQL Cluster with up to 3 SEEDs ! To check whether cluster has successfully been deployed run <sudo nodetool status> on any of your specified nodes ! ...",
    "Logo": "img/cassandra.png",
    "Role": [
        {
            "Type": "CASS_MASTER",
            "Name": "Cassandra Master Node",
            "Description": "Cassandra Master Node (PRIMARY SEED) of the cluster !",
            "Servers": {
                "Min": 1,
                "Max": 1
            },
            "Requirements": {
                "Architecture": "x86_64",
                "Cores": 2,
                "Ram": 4,
                "Storage": 2048
            },
            "Tasks" : [
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/sys_prepare.sh",
                    "tag" : "SYS-ENV-REPO-PREPARE"
                },
				{
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/install_java.sh",
                    "tag" : "INSTALL-JAVA-18-OPENJDK"
                },
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/fixing_java_home.sh",
                    "tag" : "JAVA-HOME-ENV-VARS"
                },
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/install_cassandra.sh",
                    "tag" : "INSTALL-CASSANDRA"
                },
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/temp_stop_fix.sh",
                    "tag" : "TEMP-STOP-FIX"
                },
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/configure_cassandra_node.sh {{ SELF.IP }} {{ CASS_MASTER.IP }} {{ [CASS_SLAVE.IP] }}",
                    "tag" : "CONFIGURE-AND-RESTART-MASTER"
                }

            ]
        },
        {
            "Type": "CASS_SLAVE",
            "Name": "Cassandra Slave Node",
            "Description": "Cassandra Slave Node (SECONDARY SEED) of the cluster !",
            "Servers": {
                "Min": 1,
                "Max": 2
            },
            "Requirements": {
                "Architecture": "x86_64",
                "Cores": 2,
                "Ram": 4,
                "Storage": 4096
            },
            "Tasks" : [
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/sys_prepare.sh",
                    "tag" : "SYS-ENV-REPO-PREPARE"
                },
				{
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/install_java.sh",
                    "tag" : "INSTALL-JAVA-18-OPENJDK"
                },
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/fixing_java_home.sh",
                    "tag" : "JAVA-HOME-ENV-VARS"
                },
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/install_cassandra.sh",
                    "tag" : "INSTALL-CASSANDRA"
                },
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/temp_stop_fix.sh",
                    "tag" : "TEMP-STOP-FIX"
                },
                {
                    "module_name" : "script",
                    "module_args" : "{{ SELF }}/bin/{{ DISTRIBUTION }}/{{ MAJOR }}/configure_cassandra_node.sh {{ SELF.IP }} {{ CASS_MASTER.IP }} {{ [CASS_SLAVE.IP] }}",
                    "tag" : "CONFIGURE-AND-RESTART-SLAVE",
                    "dependencies": [
                        {
                            "role": "CASS_MASTER",
                            "step": 5,
                            "tag": "CONFIGURE-AND-RESTART-MASTER"
                        }]
                }
            ]
        }
    ]
}